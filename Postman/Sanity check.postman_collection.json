							"console.log(\"[Environment] \" + pm.environment.name);",
							"",
							"pm.variables.set(\"USER\", \"Kimserey\");",
							"pm.variables.set(\"PWD\", \"123\");",
							"",
							"console.log(",
							"    \"[\" + request.name + \"] \" ",
							"    + \"Logging in to set token for next requests (\" ",
							"    + pm.variables.get(\"USER\")",
							"    + \"/\"",
							"    + pm.variables.get(\"PWD\")",
							"    + \").\"",
							");"
						],
